// tsconfig.json
{
  "compilerOptions": {
    /* Build output ------------------------------------ */
    "outDir": "lib",               // <-- compiled JS goes here
    "rootDir": "",              // source files live here
    "declaration": true,           // .d.ts alongside .js  (optional but nice)
    "sourceMap": true,             // for easier debugging  (optional)

    /* Module system ----------------------------------- */
    "module": "CommonJS",          // simplest for a CLI
    "target": "ES2022",

    /* Quality of life --------------------------------- */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },

  "include": ["src/**/*.ts", "templates/"],
  "exclude": ["node_modules", "lib"]   // keep compiled files out of future builds
}
